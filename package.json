{
	"name": "feature-flags-backend-service",
	"type": "module",
	"scripts": {
		"dev": "cross-env AUTH_MODE=dev tsx watch src/index.ts",
		"dev:keycloak": "cross-env AUTH_MODE=keycloak tsx watch src/index.ts",
		"dev:noauth": "cross-env AUTH_MODE=none tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"docker:db": "docker compose up -d",
		"docker:db:down": "docker compose down",
		"docker:keycloak": "docker compose -f docker-compose.keycloak.yml up -d",
		"docker:keycloak:down": "docker compose -f docker-compose.keycloak.yml down",
		"docker:build": "docker build -t feature-flags-backend:latest .",
		"secrets:encrypt": "tsx src/config/secrets.ts encrypt",
		"secrets:decrypt": "tsx src/config/secrets.ts decrypt",
		"secrets:verify": "tsx src/config/secrets.ts verify",
		"db:migrate": "prisma migrate deploy",
		"db:generate": "prisma generate",
		"db:push": "prisma db push"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.6",
		"@prisma/client": "^5.19.1",
		"@scalar/hono-api-reference": "^0.9.26",
		"dotenv": "^17.2.3",
		"hono": "^4.10.7",
		"hono-rate-limiter": "^0.4.2",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/node": "^24.10.1",
		"cross-env": "^10.1.0",
		"prisma": "^5.19.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	}
}
